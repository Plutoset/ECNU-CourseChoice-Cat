<!--index.wxml-->
<view class="container">
  <image class="logo" src="logo.svg" style="width:50%" mode="widthFix"/>
  
  <view class="search-container">
    <view class="search-container-item">
      <picker class="picker" mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{courseChooseTemp}}" range="{{courseChooseList}}">
        <view>
          {{courseChoose[0]}} {{courseChoose[1]}} {{courseChoose[2]}}
        </view>
      </picker>
    </view>

    <view class="search-container-item">
      <button type="primary" bindtap="bindSearch" style="width:100%">查询</button>
    </view>
  </view>

  <view wx:if="{{courseComments}}" class="tags-container">
    <view wx:for="{{tagsList}}" class="tags">
      <button>
        {{item}}
        <image class="iconfont" mode="aspectFit" style="height:25px;width:25px" src="../../icon/agree.svg"></image>
      </button>
    </view>
    <view class="addTags">
      <button>
        添加
        <image class="iconfont" mode="aspectFit" style="height:25px;width:25px" src="../../icon/agree.svg"></image>
      </button>
    </view>
  </view>
  <view class="tags-info">
    (仅显示频率最高的五个标签)
  </view>

  <view class="comments">
    <view wx:for="{{courseComments}}" class="comment">
      <view>
        {{item}}
      </view>
    </view>
  </view>
  
  
  
  <view class="buttom-info">该小程序仅作选课参考使用，具体选课请大家对自己负责，比心</view>
 

</view>
