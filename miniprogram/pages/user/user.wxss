.page {
  background-color:white;
}
.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  width: 100%;
  filter: blur(15rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid greenyellow #adff2f;
  font-size: 38rpx;
  border-radius: 10rpx;
}
.function_button {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: absolute;
  top: 55%;
}
.function_button .image_button_1 {
  position: relative;
  width: 50px;
  height: 50px;
  left: 10%;
  color: white;
  background-color: green;
}
.function_button .image_button_2 {
  position: relative;
  width: 50px;
  height: 50px;
  color: white;
  background-color: green;
}
.function_button .image_button_3 {
  position: relative;
  width: 50px;
  height: 50px;
  color: white;
  background-color: green;
}
.user_content {
  position: relative;
}
.user_content .function_wrap {
  background-color: #fff;
  margin-top: 20rpx;
}
.user_content .function_wrap .user_main .function_title {
  padding: 20rpx;
  text-align: center;
  border-bottom: 0rpx solid #ccc;
}
.user_content .function_wrap .user_main .function_content {
  margin-top: 8%;
  display: flex;
}
.user_content .function_wrap .user_main .function_content navigator {
  flex: 1;
  text-align: center;
}
.user_content .function_wrap .user_main .function_content navigator .iconfont {
  color: var(--themeColor);
}
