/* pages/preference/preference.wxss */
.font_setting{
  font-size: medium;
  text-align: center;
  margin-top: 3%;
}
.myCourses {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
  width: 100%;
}


.myCourse {
  border-style: solid;
  border-width: medium;
  border-color: #91D300;
  width: 90%;
  margin: 10rpx 0 10rpx 0;
  padding: 10rpx 10rpx 10rpx 10rpx;
}


.recommendations {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  margin-top: 25rpx;
}

.recommendation {
  border-style: solid;
  border-width: medium;
  border-color: #91D300;
  width: 90%;
  margin: 10rpx 0 10rpx 0;
  padding: 10rpx 10rpx 10rpx 10rpx;
}