/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.disable {
  color: #888;
}


.search-container {
  position: static;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.search-container-item{
  width: 35%;
}


.logo {
  margin: 50rpx 0 40rpx 0;
}

.left {
  float: left;
}

.right {
  float: right;
}

.picker {
  text-align: center;
  border-radius: 2rpx;
  height: 100%;
}

.comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: nowrap;
  margin-top: 20rpx;
}

.comment {
  border-style: solid;
  border-width: medium;
  border-color: #91D300;
  width: 90%;
  margin: 10rpx 0 10rpx 0;
  padding: 10rpx 10rpx 10rpx 10rpx;
}

.buttom-info {
  position: static;
  padding-top: 100rpx;
  width: 90%;
  font-size: smaller;
  text-align: justify;
}